<FluentGrid>
    <FluentGridItem md="12" xl="9">
        <FluentLabel Typo="Typography.H3">Available Assessments</FluentLabel>
        <FluentDataGrid Items="@Assessments">
            <PropertyColumn Property="@(p => p.Name)" />
            <PropertyColumn Property="@(p => p.Description)" />
            <PropertyColumn Property="@(p => p.Languages)" />
            <TemplateColumn>
                <FluentButton @onclick="@(() => GoToAssessment(context))" IconStart="@(new Icons.Regular.Size20.CalendarAgenda())">Details</FluentButton>
            </TemplateColumn>
        </FluentDataGrid>
    </FluentGridItem>
</FluentGrid>